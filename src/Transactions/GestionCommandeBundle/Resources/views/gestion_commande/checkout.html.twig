{% extends "TransactionsGestionCommandeBundle:Default:layout.html.twig" %}
        {% block head %}
            {{ parent() }}
        {% endblock %}
    {% block content %}


        <div class="cp-wrapper">

            {% block header %}
                {{ parent() }}
            {% endblock %}


    <section class="cp-inner-banner">
        <div class="container">
            <div class="cp-inner-banner-outer">
                <h2>Checkout</h2>

                <ul class="breadcrumb">
                    <li><a href="{{ path("affiche") }}">Home</a></li>
                    <li>Products</li>
                    <li class="active">Checkout</li>
                </ul>
            </div>
        </div>
    </section>

    <div class="cp-main-content">

        <section class="cp-checkout-section pd-t100">
            <div class="container">



                <div class="cart-table-row checkout-table-row">
                    <div class="checkout-inner-holder">
                        <h3>Liste des commandes</h3>
                        </div>
                    <div class="woocommerce">
                        <form method="get">
                            <table class="cp-shop_table">
                                <thead>
                                <tr>
                                    <th class="product-remove"></th>
                                    <th class="product-thumbnail">ref</th>
                                    <th class="product-brand">etat</th>
                                    <th class="product-brand">Prix Totale</th>
                                    <th class="product-brand">actions</th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for c in comm %}
                                {% if c.idClient ==uid %}
                                <tr class="cart_item">

                                    <td class="product-thumbnail">

                                    </td>
                                    <td class="product-brand">
                                        <a href={{ path('ma_commande',{'id':c.id}) }}>{{ c.id }}</a>
                                    </td>
                                    <td class="product-size">
                                        {% if c.etat ==1 %}
                                            confirmé
                                        {% elseif c.etat ==0 %}
                                            Non confirmé
                                        {% elseif c.etat ==2 %}
                                            en cours de livraison
                                        {% else %}
                                            livrée
                                        {% endif %}
                                    </td>
                                    <td class="product-brand">
                                        {{ c.prixTot }} tnd
                                    </td>
                                    {% if c.etat ==0 %}

                                    <td class="product-remove">
                                        <center>
                                        <a href="{{ path('commandeannul',{'id':c.id}) }}"  class="cp-btn-style4">  supprimer</a>
                                        <a href="{{ path('commandepaiement',{'id':c.id}) }}" class="cp-btn-style4">/confirmer</a>
                                        {% endif %}
                                    </center>
                                    </td>


                                </tr>
                                {% endif %}
                                {% endfor %}
                                </tbody>
                            </table>
                        </form>

                        <div class="cp-cart-bottom">

                            <a href="{{ path("affiche") }}" class="cp-btn-style3">Go to the Home Page</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    {% block footer %}
        {{ parent() }}
    {% endblock %}
</div>

{% block script %}
    {{ parent() }}
{% endblock %}
{% endblock %}


