<section class="cp-departments-section cp-departments-section_v2 pd-t100" xmlns="http://www.w3.org/1999/html">

    {% trans_default_domain 'FOSUserBundle' %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form class="cp-checkout-form" action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="row">

            <div class="col-md-12 col-sm-12">
                <div class="inner-holder">
                    <label for="username">{{ 'security.login.username'|trans }}</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                </div>
            </div>

            <div class="col-md-12 col-sm-12">
                <div class="inner-holder">
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />
                </div>
            </div>


            <div class="col-md-6 col-sm-12">
                <div class="input-field btn-holder">
                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                </div>
            </div>

            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />

        </div>


    </form>

</section>