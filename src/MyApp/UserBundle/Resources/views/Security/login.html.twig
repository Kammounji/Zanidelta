{% extends "@FOSUser/Default/layout.html.twig" %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}

    <div class="cp-wrapper">
        {% block header %}
            {{ parent() }}

        {% endblock %}

        <section class="cp-departments-section cp-departments-section_v2 pd-t100">
            <div class="cp-bg-movement" data-ibg-bg="images/White.jpg"></div>
            <div class="container" >
                <div class="row">
                    <div class="col-md-6" >
                        <div class="cp-heading-style1_v1">


                            <h2>Login</h2>
                        </div>
                        {% block fos_user_content %}
                            {% include "@FOSUser/Security/login_content.html.twig" %}
                        {% endblock fos_user_content %}



                    </div>


                    <div class="col-md-6" >


                    </div>

                </div>
                {% block fos %}
                    <div>
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                            <a href="{{ path('fos_user_security_logout') }}">
                                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                            </a>

                        {% endif %}
                    </div>
                {% endblock %}
            </div>

        </section>


        {% block footer %}
            {{ parent() }}

        {% endblock %}
    </div>


    {% block script %}
        {{ parent() }}

    {% endblock %}



{% endblock %}