{% extends "MyAppUserBundle:Default:layout.html.twig" %}
        {% block head %}
            {{ parent() }}
        {% endblock %}
    {% block content %}

<div class="cp-wrapper">

    {% block header %}
        {{ parent() }}
    {% endblock %}

    <section class="cp-inner-banner">
        <div class="container">
            <div class="cp-inner-banner-outer">
                <h2>Blog</h2>

                <ul class="breadcrumb">
                    <li><a href="{{ path("affiche") }}">Home</a></li>
                    <li>Pages</li>
                    <li class="active">Blog Medium</li>
                </ul>
            </div>
        </div>
    </section>

    <div class="cp-main-content">

        <section class="cp-blog-section pd-t100">
            <div class="container">
                <div class="row">
                    {% for e in event %}
                        {% if e.etat==true %}
                    <div class="col-md-6 col-sm-12">

                        <article class="cp-blog-item">
                            <figure class="cp-thumb">
                                <img src="{{ asset('images/' ~ e.nomImage ) }}" alt="" width="1900" height="150">

                            </figure>
                            <div class="cp-text">
                                <div class="cp-date-box">
                                    <span>{{ e.dateDebut|date("d") }}</span>
                                    {{ e.dateDebut|date('F') }}
                                </div>
                                <div class="cp-inner">
                                    <h4>{{ e.nom }} </h4>
                                    <div class="cp-top">
                                        <ul class="cp-meta-listed">
                                            <li><i class="fa fa-user" aria-hidden="true"></i>{{  e.id_association}}</li>
                                            <li><i class="fa fa-user" aria-hidden="true"></i>{{ e.nom_association }}</li>
                                            <p>il reste {{ e.nbrParticipants }} place disponible </p>
                                        </ul>
                                    </div>
                                    <p>{{ e.description }} </p>

                                    <div class="fb-like" data-href="https://developers.facebook.com/docs/plugins/" data-layout="standard" data-action="like" data-size="small" data-show-faces="true" data-share="true"></div>

                                    <a href="{{ path("evendetail",{'id':e.id}) }}" class="cp-btn-style3">Read More</a>


                                </div>
                            </div>
                        </article>

                    </div>   {% endif %}
                    {% endfor %}


                </div>

                <div class="pagination-box">
                    <nav>
                        <ul class="pagination">
                            <li> <a href="#" aria-label="Previous"> <span aria-hidden="true"><i class="fa fa-angle-right" aria-hidden="true"></i></span> </a> </li>
                            <li><a href="#">1</a></li>
                            <li class="active"><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li> <a href="#" aria-label="Next"> <span aria-hidden="true"><i class="fa fa-angle-left" aria-hidden="true"></i></span> </a> </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </section>
    </div>

    {% block footer %}
        {{ parent() }}
    {% endblock %}

</div>

{% block script %}
    {{ parent() }}
{% endblock %}
{% endblock %}