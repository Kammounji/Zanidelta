{% extends "StoreGestionProduitsBundle:Default:layout.html.twig" %}
        {% block head %}
            {{ parent() }}
        {% endblock %}
    {% block content %}

        <div class="cp-wrapper">

            {% block header %}
                {{ parent() }}
            {% endblock %}

            <section class="cp-inner-banner">
                <div class="container">
                    <div class="cp-inner-banner-outer">
                        <h2>Online store</h2>

                        <ul class="breadcrumb">
                            <li><a href="{{ path("affiche") }}">Home</a></li>
                            <li class="active">Product with Sidebar</li>
                        </ul>
                    </div>
                </div>
            </section>

        <div class="cp-main-content">
            <section class="cp-gallery-section pd-t100">
                <div class="container">
                    <ul class="cp_portfolioGallery pretty-gallery cp-gallery-masonary">
                        {%  for c in categorie %}
                        <li class="cp-masonary-item">
                            <figure class="cp-gallery-item">
                                <img src="{{ asset('uploads/categories/'~c.urlImg) }}" alt="">
                                <figcaption class="cp-caption">
                                    <div class="cp-inner">
                                        <a href="{{ path("affproduit",{"id":c.id}) }}" class="gallery-btn">Entrer</a>
                                        <h3>{{ c.nom }}</h3>
                                    </div>
                                </figcaption>
                            </figure>
                        </li>
                        {% endfor %}
                    </ul>

                    <div class="pagination-box">
                        <nav>
                            <ul class="pagination">
                                <li> <a href="#" aria-label="Previous"> <span aria-hidden="true"><i class="fa fa-angle-right" aria-hidden="true"></i></span> </a> </li>
                                <li><a href="#">1</a></li>
                                <li class="active"><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#">5</a></li>
                                <li> <a href="#" aria-label="Next"> <span aria-hidden="true"><i class="fa fa-angle-left" aria-hidden="true"></i></span> </a> </li>
                            </ul>
                        </nav>
                    </div>

                </div>
            </section>
        </div>


            {% block footer %}
                {{ parent() }}
            {% endblock %}
        </div>

    {% block script %}
        {{ parent() }}
            {% endblock %}

    {% endblock %}