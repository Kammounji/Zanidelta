{% extends "StoreGestionProduitsBundle:Default:layout.html.twig" %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

        {% block head %}
            {{ parent() }}
        {% endblock %}
    {% block content %}

        <div class="cp-wrapper">

            {% block header %}
                {{ parent() }}
            {% endblock %}

            <section class="cp-inner-banner">
                <div class="container">
                    <div class="cp-inner-banner-outer">
                        <h2>Espace Ajout Produit</h2>

                        <ul class="breadcrumb">
                            <li><a href="{{ path("affiche") }}">Home</a></li>
                            <li>Espace Magasin</li>
                            <li class="active">Modifier</li>
                        </ul>
                    </div>
                </div>
            </section>

            <div class="cp-main-content">

                <section class="cp-checkout-section pd-t100">
                    <div class="container">
                        {{ form_start(form) }}

                        <h3> Nom : </h3>
                        {{ form_widget(form.label, {value : produit.label  } ) }}
                        <h3> image : </h3>
                        {{ form_widget(form.image, {value : produit.urlImg }) }}
                        <h3> Poid : </h3>
                        {{ form_widget(form.poid, {value : produit.poid }) }}
                        <h3> Caracteristiques : </h3>
                        {{ form_widget(form.caracteristiques, {value : produit.caracteristiques }) }}
                        <h3> Sexe : </h3>
                        {{ form_widget(form.sexe, {value : produit.sexe }) }}
                        <h3> Age : </h3>
                        {{ form_widget(form.age, {value : produit.age }) }}
                        <h3> Date de debut d'echere : </h3>
                        {{ form_widget(form.dateDebut, {value : enchere.dateDebut }) }}
                        <h3> Seuil Mise : </h3>
                        {{ form_widget(form.seuilMise, {value : enchere.seuilMise }) }}
                        {{ form_widget(form.idProprietaire, {value : app.user.id }) }}
                        <h3> Description : </h3>
                        {{ form_widget(form.description, {value : produit.description }) }}
                        <h3> Categorie : </h3>
                        {{ form_widget(form.categorie) }}
                        {{ form_widget(form.ajouter) }}

                        {{ form_end(form) }}

                    </div>
                </section>
            </div>

            {% block footer %}
                {{ parent() }}
            {% endblock %}
        </div>

        {% block script %}
            {{ parent() }}
        {% endblock %}
    {% endblock %}